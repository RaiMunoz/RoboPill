<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.amaliacowan.pilldispenserdemo.Menu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PillPlanner"
                android:id="@+id/textView2"
                android:textStyle="bold"
                android:textSize="45dp"
                android:paddingStart="0dp"
                android:phoneNumber="false"
                android:paddingEnd="0dp"
                android:singleLine="false"
                android:textAlignment="center"
                android:password="false"
                android:paddingBottom="0dp"
                android:layout_marginBottom="0dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:layout_column="14"
                android:src="@drawable/ic_launcher_web"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect via Bluetooth"
                android:id="@+id/button7"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_span="2"
                android:paddingEnd="130dp"
                android:paddingStart="20dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manage Schedule"
                android:id="@+id/button9"
                android:layout_below="@+id/button8"
                android:layout_alignParentStart="true"
                android:layout_gravity="top"
                android:paddingEnd="150dp" />

            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Medication"
            android:id="@+id/button8"
            android:layout_below="@+id/button5"
            android:layout_alignParentStart="true"
            android:paddingEnd="150dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispense Medication 1"
                android:id="@+id/button13"
                android:layout_below="@+id/button5"
                android:layout_alignParentStart="true"
                android:paddingEnd="150dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dispense Medication 2"
                android:id="@+id/button14"
                android:layout_below="@+id/button5"
                android:layout_alignParentStart="true"
                android:paddingEnd="150dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
